<main>
  <h1>Attach a player to your team</h1>
  <div class="form">
    <h2>{{team.name}}</h2>
    <img class="cube" src="{{team.imageUrl}}">
    <form action='/teams/{{team._id}}/attach' method="POST">
      <label for="accessory">Players</label>
      <select id="accessory" name="accessory">
        {{#each players}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
      <input type="submit" value="Attach">
    </form>
    <h3 class="italic">{{team.description}}
    </h3>
    <a class="btn" href="/teams">Back</a>
  </div>
</main>